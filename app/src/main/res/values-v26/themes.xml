<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StatLinearLayout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="ButtonSeeAll">
        <item name="backgroundTint">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/rounded_light_pink</item>
        <item name="android:fontFamily">@font/montserrat_semi</item>
        <item name="android:textColor">@color/secondary_main</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/see_all</item>
    </style>
</resources>